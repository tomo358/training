<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th>User_name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.user.name %></td>
        <td><%= favorite.title %></td>
        <td><%= favorite.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

